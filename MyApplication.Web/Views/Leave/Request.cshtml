@model MyApplication.Web.Models.LeaveRequest
@{
    ViewData["Title"] = "Yıllık İzin Başvurusu";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4">
                <h2 class="mb-4 fw-bold text-primary text-center">Yıllık İzin Başvurusu</h2>
    <form asp-action="Request" method="post">
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">İzin Başlangıç Tarihi</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">İzin Bitiş Tarihi</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReturnDate" class="form-label">Göreve Başlayacağı Tarih</label>
            <input asp-for="ReturnDate" type="date" class="form-control" />
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4"><i class="bi bi-send"></i> Başvur</button>
                        <a href="@Url.Action("MyLeaves", "Leave")" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> İzinlerim</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"> 