@model IEnumerable<MyApplication.Web.Models.LeaveRequest>
@using MyApplication.Web.Models

@{
    ViewData["Title"] = "İzinlerim";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">İzinlerim</h2>
        <a class="btn btn-success px-4" href="@Url.Action("Request", "Leave")"><i class="bi bi-plus-circle"></i> Yeni İzin Başvurusu</a>
    </div>
    <div class="table-responsive shadow rounded-4">
        <table class="table table-striped align-middle mb-0">
            <thead class="table-dark">
            <tr>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                    <th>Durum</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var leave in Model)
        {
            <tr>
                        <td>@leave.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@leave.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                            @if (leave.Status == LeaveRequestStatus.Approved)
                    {
                                <span class="badge bg-success px-3 py-2">Onaylandı</span>
                    }
                            else if (leave.Status == LeaveRequestStatus.Pending)
                    {
                                <span class="badge bg-warning text-dark px-3 py-2">Onay Bekliyor</span>
                    }
                    else
                    {
                                <span class="badge bg-danger px-3 py-2">Reddedildi</span>
                    }
                </td>
                        <td>@leave.Description</td>
            </tr>
        }
        </tbody>
    </table>
</div> 
</div>
<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"> 