@model IEnumerable<MyApplication.Web.Models.User>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Kullanıcı Listesi</h2>
        <div>
            <a class="btn admin-action-btn me-2" href="@Url.Action("NewsList", "Admin")"><i class="bi bi-newspaper me-1"></i> Haberler</a>
            <a class="btn admin-action-btn me-2" href="@Url.Action("LeaveRequests", "Admin")"><i class="bi bi-calendar-check me-1"></i> İzin Talepleri</a>
            <a class="btn admin-action-btn" href="@Url.Action("CreateUser", "Admin")"><i class="bi bi-person-plus me-1"></i> Kullanıcı Ekle</a>
        </div>
    </div>
    <div class="table-responsive shadow rounded-4">
        <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-dark">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Doğum Tarihi</th>
                <th>Yönetici</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                        <td class="fw-semibold">@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (user.IsSuperUser)
                    {
                                <span class="badge bg-success px-3 py-2">Evet</span>
                    }
                    else
                    {
                                <span class="badge bg-secondary px-3 py-2">Hayır</span>
                    }
                </td>
                <td>
                            <a class="btn btn-primary btn-sm me-2" href="@Url.Action("EditUser", "Admin", new { id = user.Id })"><i class="bi bi-pencil"></i> Düzenle</a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })"><i class="bi bi-trash"></i> Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 
</div>
<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"> 