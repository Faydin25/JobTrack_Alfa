@model MyApplication.Web.Models.News

@{
    ViewData["Title"] = "Haberi Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4">
                <h2 class="fw-bold text-danger text-center mb-3"><i class="bi bi-trash me-2"></i>Haberi Sil</h2>
                <div class="alert alert-warning text-center mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Bu haberi silmek istediğinizden emin misiniz?
                </div>
                <h4 class="fw-semibold text-primary">@Html.DisplayFor(model => model.Title)</h4>
                <hr />
                <dl class="row mb-4">
                    <dt class="col-sm-4">Yayınlanma Tarihi</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PublishedDate)</dd>
                </dl>
                <form asp-action="DeleteNews">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4"><i class="bi bi-trash"></i> Sil</button>
                        <a asp-action="NewsList" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"> 