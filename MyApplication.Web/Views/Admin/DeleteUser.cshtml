@model MyApplication.Web.Models.User
@{
    ViewData["Title"] = "Kullanıcıyı Sil";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4">
                <h2 class="fw-bold text-danger text-center mb-3"><i class="bi bi-person-x-fill me-2"></i>Kullanıcıyı Sil</h2>
                <div class="alert alert-warning text-center mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Bu kullanıcıyı silmek istediğinizden emin misiniz?
                </div>
                <dl class="row mb-4">
                    <dt class="col-sm-4">Kullanıcı Adı</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    <dt class="col-sm-4">Telefon Numarası</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>
                </dl>
                <form asp-action="DeleteUserConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4"><i class="bi bi-trash"></i> Sil</button>
                        <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary px-4"><i class="bi bi-x-circle"></i> Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"> 