@model MyApplication.Web.Models.EditProfileModel

@{
    ViewData["Title"] = "Profil Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4">
                <h2 class="fw-bold text-primary text-center mb-4"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h2>
                <form asp-controller="ForEditProfile" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <img src="~/images/@Model.PhotoPath" class="rounded-circle border border-3 mb-2" style="width: 120px; height: 120px; object-fit: cover;" alt="Profil Fotoğrafı" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border border-3 mx-auto mb-2" style="width: 120px; height: 120px; font-size: 2.5rem; color: #888;">
                                <span><i class="bi bi-person"></i></span>
                            </div>
                        }
                        <input asp-for="File" type="file" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Sadece resim dosyası yükleyebilirsiniz (jpg, png, gif, webp, bmp).</small>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Yeni Şifre</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-2"><i class="bi bi-save me-2"></i>Güncelle</button>
                </form>
                <hr />
                <form asp-controller="ForEditProfile" asp-action="DeleteAccount" method="post" onsubmit="return confirm('Hesabınızı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.');">
                    <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash me-2"></i>Hesabı Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
